<div class="js-product-samples">
  <div class="product-samples-button-wrap">
    <button type="button" class="product-samples-button button" product-samples-button=""
      title="Order a free sample of the {{ product.title }}"
      data-sample-variant-id="{{ product.metafields.advsample_attr.sample_var_id }}"
      data-title="{{ product.title }}"
      data-vendor="{{ product.vendor }}"
      data-featured-image="{{ product.featured_image | img_url: 'master' }}"
    >Free Sample</button>
  </div>
</div>
