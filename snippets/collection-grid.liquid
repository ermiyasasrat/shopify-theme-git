{%- endif -%}

{% for variant in product.variants %}
  {% if forloop.first %}
    {% assign variantFilterFields = variant.metafields.filters %}
    <div class="variantFilterFields" style="display:none;">
      {{ variantFilterFields | json }}
    </div>
  {% endif %}
{% endfor %}

