{% if template contains 'product' %}
  <meta property="og:type" content="product">
  <meta property="og:title" content="{{ product.title | strip_html | escape }}">
  <meta property="og:category" content="{{ product.type }}" />
<meta property="product:brand" content="{{product.vendor}}">
{% if product.available %}
<meta property="product:availability" content="in stock">
{% else %}
<meta property="product:availability" content="out of stock">
{% endif %}
<meta property="product:condition" content="new">
{% assign current_variant = product.selected_or_first_available_variant %}
{% assign productType = product.type | downcase | replace: ' ', '_' | slice: 0, 20 %}

{%- assign selectedVariant = product.selected_or_first_available_variant -%}	
{%- assign current_variant = selectedVariant -%}
{%- assign productType = product.type | downcase | replace: ' ', '_' | slice: 0, 20 -%}

{%- if product.variants.size > 1 -%}
	{%- assign productPrice = current_variant.price | money_without_currency -%}
	{%- assign productRollWidth = current_variant.metafields[productType].roll_width -%}
{%- else -%}
	{%- assign productPrice = product.price | money_without_currency -%}
	{%- assign productRollWidth = product.metafields[productType].roll_width -%}
{%- endif -%}
{%- assign productPackSize = current_variant.metafields.product_attribute.pack_size -%}

{%- if productRollWidth == blank and selectedVariant.metafields.product_config.sale_metric == "Roll" -%}
		{%- assign productRollWidth = current_variant.metafields.product_attribute.width -%}
{%- endif -%}

{%- if selectedVariant.metafields.product_config.sale_metric == "Pack" -%}
	{%- assign productPricePerMetresSquared = productPrice | divided_by: productPackSize | round: 2 -%}
	{%- assign productPricePerMetresSquared = productPricePerMetresSquared | times: 100 | money -%}

{%- elsif selectedVariant.metafields.product_config.sale_metric == "Box" or selectedVariant.metafields.product_config.sale_metric == "Tile" -%}
	{%- assign productPricePerMetresSquared = product.price | money -%}
{%- elsif selectedVariant.metafields.product_config.sale_metric == "Roll" -%}
	{%- assign checkedSquareMetrePrice = current_variant.price | divided_by: productRollWidth | times: 0.01 -%}
	{%- assign productPricePerMetresSquared = checkedSquareMetrePrice | times: 100 | money -%}
{%- endif -%}

<meta property="product:price:amount" content="{{ productPricePerMetresSquared }}">
<meta property="product:price:currency" content="GBP">
<meta property="product:retailer_item_id" content="{{ product.id }}">
<meta property="product:item_group_id" content="{{product.collections[0].id}}">
<meta property="product:google_product_category" content="2826">
  {% for image in product.images limit:3 %}
  <meta property="og:image" content="http:{{ image.src | product_img_url: 'master' }}">
  <meta property="og:image:secure_url" content="https:{{ image.src | product_img_url: 'master' }}">
  {% endfor %}




{% comment %}
