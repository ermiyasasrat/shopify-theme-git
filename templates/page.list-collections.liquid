{% include 'breadcrumbs' class: 'dark' %}
{% section 'hero' %}

{% if linklists[page.handle].links.size > 0 %}
    {% assign number_of_links = 0 %}
    <div class="site-wrap">
        <ul class="grid grid--1-3 {% if page.url == "/pages/brand" %}brand-page-container{% endif %}">
            {% for link in linklists[page.handle].links %}
                {% if link.type == 'collection_link' %}
                    {% assign collection = link.object %}
                    {% assign woolimage = collection.image.url %}
                    {% assign number_of_links = number_of_links | plus: 1 %}
                    <li class="grid__item grid__item--centre">
                        <div class="grid-list-item">
                            <a href="{{ link.url }}">
                                <div class="grid-list-item__image" style="background-image: url('{{ collection.image.src | collection_img_url: 'original' }}');">
                                <h2 class="grid-list-item__title">{{- link.title -}}</h2>
                                </div>
                                <div class="grid-list-item__para">
                                    {{- collection.description -}}
                                </div>
                            </a>
                            <div>
                                <a title="View All" href="{{ link.url }}" class="button button--secondary">View All</a>
                            </div>
                        </div>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endif %}

