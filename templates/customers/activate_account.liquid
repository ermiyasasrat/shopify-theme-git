<div class="account">
    <div class="site-wrap">
        <div class="account-form">
            <h1 class="account-title">
                Activate account
            </h1>
            <div class="wysiwyg">
                <p class="account-form__description">
                    Create your password to activate your account.
                </p>
            </div>
            {% form 'activate_customer_password' %}
                {%- if form.errors -%}
                    <div class="account-form-errors">
                        {{ form.errors | default_errors }}
                    </div>
                {%- endif -%}
                <div class="account-form__field">
                    <label class="account-form__label visuallyhidden" for="CustomerPassword">Password</label>
                    <input type="password" name="customer[password]" id="CustomerPassword" class="input input-text account-form__input" placeholder="Password" value="">
                </div>
                <div class="account-form__field">
                    <label class="account-form__label visuallyhidden" for="CustomerPasswordConfirmation">Confirm password</label>
                    <input type="password" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input input-text account-form__input" placeholder="Confirm password" value="">
                </div>
                <button class="button button--solid" type="submit">
                    Activate account
                </button>
                <button class="button button--solid" type="submit" name="decline">
                    Decline invitation
                </button>
            {% endform %}
        </div>
    </div>
</div>
