<!--contact form left and right -->
<div class="image-text-split__wrap">
    <div class="image-text-split__content contact-left">
        <div class="image-text-split__content__container ">
            <div class="image-text-split__content__inner ">
                {% form 'contact' %}
                {% if form.posted_successfully? %}
                    <div class="contact-form__intro">
                        <p>
                            Thank you for your contact
                        </p>
                    </div>
                {% else %}
                    <div class="contact-form__intro">
                        {{ page.content }}
                    </div>
                {% endif %}
                {%- if form.errors -%}
                    <div class="contact-form-errors">
                        {{ form.errors | default_errors }}
                    </div>
                {% endif %}
                <div class="contact-form__field">
                    <label class="contact-form__label" for="ContactFormName">Name</label>
                    <input class="input input-text" type="text" id="ContactFormName" name="contact[name]">
                </div>
                <div class="contact-form__field">
                    <label class="contact-form__label" for="ContactFormEmail">Email address</label>
                    <input class="input input-text" type="email" id="ContactFormEmail" name="contact[email]">
                </div>
                <div class="contact-form__field">
                    <label class="contact-form__label" for="ContactFormPhone">Phone number</label>
                    <input class="input input-text" type="tel" id="ContactFormPhone" name="contact[phone]">
                </div>
                <div class="contact-form__field">
                    <label class="contact-form__label" for="ContactFormMessage">Your message</label>
                    <textarea class="input input-text" rows="10" id="ContactFormMessage" name="contact[body]"></textarea>
                </div>
                <div class="contact-form__field contact-form__field--split">
                    <div class="product-basket__wastage input-checkbox">
                        <input type="checkbox" class="input-checkbox__input" id="ContactFormOffers" name="contact[offers]">
                        <label class="input-checkbox__label" for="ContactFormOffers">
                            Keep me up to date on news and exclusive offers
                        </label>
                    </div>
                </div>
                <div class="contact-form__field contact-form__field--split">
                    <input class="button contact-form__submit" type="submit" value="Submit">
                </div>
            {% endform %}
            </div>
        </div>
    </div>

    <div class="image-text-split__content contact-right">
    <div class="image-text-split__content__container contact-form-right">
        <div class="image-text-split__content__inner">
        <div class="contact-map__details-item">            
          <div class="wysiwyg wysiwyg--tight">
             {{ section.settings.sidebar-html }}
          </div>
        </div>
        </div>
    </div>
    </div>
</div>
  <!--contact form left and right -->
{% schema %}
{
    "name":"Contact section",
    "tag": "section",
    "class":"page page--no-padding",
	"settings": [
		{
			"id": "sidebar-html",
			"type": "html",
			"label": "Sidebar contents"
		}
	]
}
{% endschema %}
