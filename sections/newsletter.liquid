<section class="newsletter-sec">
  <img width="574" height="359" src="{{ section.settings.image | img_url: "master" }}" loading="lazy" alt="{{ section.settings.image.alt }}">
  <div class="site-wrap">
    <h2>{{ section.settings.heading }}</h2>
    {% form 'customer', class: 'newsletter-form' %}
      <div class="email">
        <div class="field">
          <input class="field__input" autocomplete="name" type="text" id="ContactForm-first_name" name="contact[first_name]" value="" aria-required="true" placeholder="First Name" required>
        </div>
        <div class="field">
          <input class="field__input" type="email" name="contact[email]" placeholder="Enter your email" required>
        </div>
        <div class="submit">
          <input type="submit" value="subscribe"/>
        </div>
      </div>
      {%- if form.posted_successfully? -%}
        <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>
          {{ 'newsletter.success' | t }}
        </h3>
      {%- endif -%}
    {% endform %}
  </div>
</section>


{% schema %}
  {
    "name": "Newsletter",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Newsletter Shape"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
    ],
    "presets": [
      {
        "name": "Newsletter",
      }
    ]
  }
{% endschema %}