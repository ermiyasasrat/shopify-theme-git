<div class="site-wrap">
    <ul class="grid grid--1-3">
        {% for collection in collections %}
            <li class="grid__item grid__item--centre">
                <div class="grid-list-item">
                    <a href="{{ collection.url }}">
                        {% if collection.image %}
                            {% assign image_small_1x = collection.image | img_url: '325x245' %}
                            {% assign image_small_2x = collection.image | img_url: '650x490' %}
                            {% assign image_medium_1x = collection.image | img_url: '400x300' %}
                            {% assign image_medium_2x = collection.image | img_url: '800x600' %}
                            {% assign image_large_1x = collection.image | img_url: '550x410' %}
                            {% assign image_large_2x = collection.image | img_url: '1100x820' %}
                            {% include 'picture',
                                small1x: image_small_1x,
                                small2x: image_small_2x,
                                medium1x: image_medium_1x,
                                medium2x: image_medium_2x,
                                large1x: image_large_1x,
                                large2x: image_large_2x,
                                class: 'grid-list-item__image',
                                alt: link.title,
                                lazy: true
                            %}
                        {% else %}
                            {% assign image_small_1x = collection.products.first | img_url: '325x245' %}
                            {% assign image_small_2x = collection.products.first | img_url: '650x490' %}
                            {% assign image_medium_1x = collection.products.first | img_url: '400x300' %}
                            {% assign image_medium_2x = collection.products.first | img_url: '800x600' %}
                            {% assign image_large_1x = collection.products.first | img_url: '550x410' %}
                            {% assign image_large_2x = collection.products.first | img_url: '1100x820' %}
                            {% include 'picture',
                                small1x: image_small_1x,
                                small2x: image_small_2x,
                                medium1x: image_medium_1x,
                                medium2x: image_medium_2x,
                                large1x: image_large_1x,
                                large2x: image_large_2x,
                                class: 'grid-list-item__image',
                                alt: link.title,
                                lazy: true
                            %}
                        {% endif %}
                        <h2 class="grid-list-item__title">{{- collection.title -}}</h2>
                        <p class="grid-list-item__para">
                            {{- collection.description -}}
                        </p>
                    </a>
                    <div>
                        <a href="{{ collection.url }}" class="button button--secondary">{{ collection.title }}</a>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>