<section class="custom-collection-list" style="background-color:{{section.settings.background_accent}}">
  <div class="site-wrap">
    <div class="collection-list-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'collection' %}
            <div class="collection-item">
              <a href="{{ block.settings.link }}">
                <img width="157" height="157" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}"/>
              </a>
              <a href="{{ block.settings.link }}">
                <h3>{{ block.settings.title }}</h3>
              </a>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Home Collections List",
    "max_blocks": 6,
    "settings": [
      {
        "type": "color",
        "id": "background_accent",
        "label": "Section Background Color",
        "default": "#1b2c3d"
      }
    ],
    "blocks": [
      {
        "name": "Room Collections",
        "type": "collection",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Collection Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Collection Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Collection Link"
          },
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Collections List",
      }
    ]
  }
{% endschema %}