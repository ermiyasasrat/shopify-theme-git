<div class="shopify-section section">
    <section class="staff-upper">		
        <div class="staff-upper-text-wrap">   
          <nav class="breadcrumbs">
			<ol class="breadcrumbs__list">
				<li class="breadcrumbs__list-item">
				    <a href="/" title="Home">Home</a>
				</li>
				<span class="breadcrumbs__arrow">
					{% include 'icon-nav-arrow' %}
				</span>

				<li class="breadcrumbs__list-item">
				    <a href="/pages/about-us">About Us</a>
				</li>
				<span class="breadcrumbs__arrow">
					{% include 'icon-nav-arrow' %}
				</span>

				<li class="breadcrumbs__list-item">
				    <strong>{{ page.title }}</strong>
				</li>
			</ol>
		</nav>
            <h1 class="title image-text-split__title twoliner">{{ page.title }}</h1>   
            <div class="para image-text-split__para twoliner_para">
                {{- section.settings.about-the-team -}}
            </div>
        </div>
        <div class="staff-upper-image" style="background-image: url('{{ section.settings.staff-all-together-photo | img_url: '1200x800' }}');">
            
        </div>
    </section>
</div>

<section id="staff-start" class="staff-lower">
{% for block in section.blocks %}
    <div class="staff-wrap">
    	<div class="staff-wrap-left">
	       <img src="{{ block.settings.staff-photo | img_url: '340x510' }}" class="staff-photo" alt="{{ block.settings.staff-name | escape }}">
{% unless block.settings.staff-linkedin == blank %}
  <a class="linkedin" href="{{ block.settings.staff-linkedin | escape }}" title="View {{ block.settings.staff-name | escape }}'s LinkedIn Profile Here" target="_blank"><img src="https://cdn.shopify.com/s/files/1/0418/4568/6426/files/Stories-Flooring-LinkedIn.png?v=1656429076" title="View {{ block.settings.staff-name | escape }}'s LinkedIn Profile Here" alt="View {{ block.settings.staff-name | escape }}'s LinkedIn Profile Here" class="linkedin"/></a>
{% endunless %}
	   </div>

	   <div class="staff-wrap-right">
	       <div class="staff-details">
	            <h4>{{ block.settings.staff-role | escape }}</h4>
	            <h2>{{ block.settings.staff-name | escape }}</h2>
	         <div class="staff-row">
	            <span class="staff-label">Favourite Food: </span><span class="staff-answer">{{ block.settings.staff-food | escape }}</span>
	         </div>
	         
	         <div class="staff-row">
	            <span class="staff-label">First Job: </span><span class="staff-answer">{{ block.settings.staff-first-job | escape }}</span>
	         </div>
	         
	         <div class="staff-row">
	            <span class="staff-label">Favourite Quote: </span><span class="staff-answer">{{ block.settings.staff-quote | strip_html  }}</span>
	         </div>
	         
	         <div class="staff-row">
	            <span class="staff-label">Hobby: </span><span class="staff-answer">{{ block.settings.staff-hobby | strip_html }}</span>
	         </div>
	       </div>
	   </div>
    </div>
{% endfor %}
</section>


{% schema %}
{

    
"name": "Staff Member",
    "settings": [
            {
              "type" : "richtext",
              "label" : "About the team",
              "id" : "about-the-team"
              },
              {
              "type" : "image_picker",
              "label" : "Staff All together Photo",
              "id" : "staff-all-together-photo"
              }
            ],
        "blocks": [
            {
            "type": "image",
            "name": "Staff member",                
                "settings": [
                    {
                        "type": "image_picker",
                        "label": "Staff Photo",
                        "id": "staff-photo"
                    },
                    {
                        "type": "text",
                        "label" : "Staff name",
                        "id" : "staff-name"
                    },
                    {
                        "type": "text",
                        "label" : "Staff Role",
                        "id" : "staff-role"
                    },
                    {
                        "type": "text",
                        "label" : "Staff favourite food",
                        "id" : "staff-food"
                    },
                    {
                        "type": "text",
                        "label" : "Staff first paying job",
                        "id" : "staff-first-job"
                    },
                    {
                        "type" : "richtext",
                        "label" : "Staff Favourite Quote",
                        "id" : "staff-quote"
                    },
                    {
                        "type" : "richtext",
                        "label" : "Staff hobby",
                        "id" : "staff-hobby"
                    },
                    {
                        "type" : "text",
                        "label" : "Staff LinkedIn URL",
                        "id" : "staff-linkedin"
                    }
                ]
            }
        ]
}
{% endschema %}

