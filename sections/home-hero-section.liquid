<section class="home-hero">
  <div class="hero-wrapper">
    <div class="hero-content">
      <div class="content">
        <a href="{{ section.settings.trustpilot_widget_link }}" title="Read our reviews on TrustPilot" target="_blank" rel="nofollow">
          <img src="{{ section.settings.trustpilot_widget | img_url: 'master' }}"/>
        </a>
        <h1>{{ section.settings.home_hero_title }}</h1>
        <p>{{ section.settings.home_hero_content }}</p>
        <ul>
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'hero_bullets' %}
              <li class="test">{{ block.settings.hero_bullet_text }}</li>
            {% endcase %}
          {% endfor %}
        </ul>
        <a class="button" href="{{- section.settings.home_hero_button_link -}}">
            {{- section.settings.home_hero_button_text -}}
        </a>
      </div>
    </div>
    <div class="hero-image">
      <img class="main-image" width="735" height="536" src="{{ section.settings.home_hero_image | img_url: 'master' }}"/>
      <img class="shape-top" width="200" height="270" src="{{ section.settings.home_hero_shape_right | img_url: 'master' }}"/>
      <div class="shape-bottom">
        <img width="18" height="18" src="{{ section.settings.home_hero_shape_bottom | img_url: 'master' }}"/>
        <p>{{ section.settings.home_hero_shape_bottom_text }}</p>
      </div>
    </div>
  </div>
</section>




{% schema %}
  {
    "name": "Home Hero",
    "class": "home-hero-sec",
    "max_blocks": 3,
    "settings": [
      {
        "type": "text",
        "id": "trustpilot_widget_link",
        "label": "Trustpilot Link"
      },
      {
        "type": "image_picker",
        "id": "trustpilot_widget",
        "label": "Trustpilot Image"
      },
      {
        "type": "text",
        "id": "home_hero_title",
        "label": "Hero Title"
      },
      {
        "type": "text",
        "id": "home_hero_content",
        "label": "Hero Content"
      },
      {
        "type": "text",
        "id": "home_hero_button_text",
        "label": "Hero Button Text"
      },
      {
        "type": "url",
        "id": "home_hero_button_link",
        "label": "Hero Button Link"
      },
      {
        "type": "image_picker",
        "id": "home_hero_image",
        "label": "Hero Image"
      },
      {
        "type": "image_picker",
        "id": "home_hero_shape_right",
        "label": "Hero Right Shape"
      },
      {
        "type": "image_picker",
        "id": "home_hero_shape_bottom",
        "label": "Hero Bottom Shape"
      },
      {
        "type": "text",
        "id": "home_hero_shape_bottom_text",
        "label": "Hero Bottom Shape Text"
      },
    ],
    "blocks": [
      {
        "type": "hero_bullets",
        "name": "Hero Bullet Points",
        "settings": [
          {
            "type": "text",
            "id": "hero_bullet_text",
            "label": "Hero Bullet Text",
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Hero",
      }
    ]
  }
{% endschema %}