            },
            {
                "type": "html",
                "id": "about_hero_content_section_three",
                "label": "About Us Content Section Three"
            },
            {
                "type": "image_picker",
                "id": "about_image_section_three",
                "label": "Image for Section Three",
                "info": "Recommended image size: 720 x 720."
