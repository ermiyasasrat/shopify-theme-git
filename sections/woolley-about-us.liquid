        <div class="woolley-hero-image-text-split-right about-image-section" style="background-image: url('{{ section.settings.about_image_section_five | img_url: 'master'}}');">
          {% comment %} <img loading="lazy" src="{{ section.settings.about_image_section_five | img_url: 'master'}}" alt="{{- section.settings.about_title_section_five -}}">{% endcomment %}
