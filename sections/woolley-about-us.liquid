                "type": "text",
                "id": "about_title_section_one",
                "label": "About hero title"
            },
            {
                "type": "html",
                "id": "about_hero_content_section_one",
                "label": "About Us Content Section One"
            },
            {
                "type": "image_picker",
                "id": "about_image_section_one",
                "label": "Image for Section One",
                "info": "Recommended image size: 720 x 720."
            },
            {
                "type": "text",
                "id": "about_title_section_two",
                "label": "About Title Section Two"
            },
            {
                "type": "html",
                "id": "about_hero_content_section_two",
