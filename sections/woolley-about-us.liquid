{% endschema %}

{% unless
    section.settings.about_title_section_one == blank
    and section.settings.about_hero_content_section_one == blank
    and section.settings.about_image_section_one == blank
%}
<section class="image-text-split image-text-split--dark">
    <div class="image-text-split__wrap">
        <div class="woolley-hero-image-text-split-left">
            <div class="woolley-hero-image-text-split-content">
                <div class="para image-text-split__para">
                    <h2 class="title title--small image-text-split__title">{{- section.settings.about_title_section_one -}}</h2>
                    {{- section.settings.about_hero_content_section_one -}}
                </div>
            </div>
        </div>
        <div class="woolley-hero-image-text-split-right about-image-section" style="background-image: url('{{ section.settings.about_image_section_one | img_url: 'master'}}');">
        </div>
    </div>
</section>
{% endunless %}


{% unless
section.settings.about_title_section_two == blank
and section.settings.about_hero_content_section_two == blank
%}
<section class="image-text-split image-text-split--beige">
    <div class="image-text-split__wrap">
        <div class="woolley-hero-image-text-split-left about-image-section" style="background-image: url('{{ section.settings.about_image_section_two | img_url: 'master'}}');">
        </div>
        <div class="woolley-hero-image-text-split-right">
            <div class="woolley-hero-image-text-split-content">
